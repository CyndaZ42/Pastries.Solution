@{
  Layout ="_Layout";
}

@using Pastries.Models;

<h1>Treats</h1>

<br>
@if (@Model.Count == 0)
{
  <h2>I'm hungry.</h2>
  <h5>Hi hungry, I'm Dad.</h5>
  <h3>Why did you name me this way?</h3>
} 

<ul>
  @foreach(Treat treat in Model)
  {
    <li>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new treat", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>